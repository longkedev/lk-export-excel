{
    "name": "lkexcel/lkexportexcel",
    "description": "新一代PHP Excel处理库 - 高性能、低内存、易使用",
    "type": "library",
    "license": "MIT",
    "keywords": ["excel", "xlsx", "csv", "export", "import", "php", "performance"],
    "authors": [
        {
            "name": "lkExcel Team",
            "email": "support@lkexcel.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-zip": "*",
        "ext-xml": "*",
        "ext-mbstring": "*",
        "ext-zlib": "*",
        "psr/log": "^1.0|^2.0|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "LkExcel\\LkExportExcel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LkExcel\\LkExportExcel\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse",
        "format": "php-cs-fixer fix"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 